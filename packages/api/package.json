{
  "name": "api",
  "version": "1.0.0",
  "description": "Backend API pour RoutineStars",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "db:push": "prisma db push --accept-data-loss",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate:resolve": "prisma migrate resolve --applied 20250110_add_genres_to_books",
    "seed:awards": "node scripts/seed-awards.js",
    "seed:quizzes": "node scripts/seed-quizzes.js",
    "test:system": "node scripts/test-system.js",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "shared": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "prisma": "^5.7.1"
  }
}
